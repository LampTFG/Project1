<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project01"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.project01.StartUp"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project01.LogInScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.project01.LogInScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project01.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.project01.welcome" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project01.ScanScreen"
            android:label="@string/title_activity_scan_screen" >
            <intent-filter>
                <action android:name="com.example.project01.ScanScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project01.HistoryScreen"
            android:label="@string/title_activity_history_screen" >
            <intent-filter>
                <action android:name="com.example.project01.HistoryScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project01.ShoppingCart"
            android:label="@string/title_activity_shopping_cart" >
            <intent-filter>
                <action android:name="com.example.project01.ShoppingCart" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>